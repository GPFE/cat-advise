<%= form_with model: post.likes.build, url: likes_path, class: "btn-group btn-group-sm", method: :post, local: true do |form| %>
    <%= form.hidden_field :post_id, value: post.id %>
    <%= form.hidden_field :is_liked, value: is_liked %>
    <%= button_tag(class: "#{button_color} btn btn-secondary like_button rounded-#{rounding}-pill") do %>
        <%= render inline: Rails.root.join("app/assets/images/icons/#{icon}.svg").read %>
    <% end %>
<% end %>