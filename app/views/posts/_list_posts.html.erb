<% posts.each do |post| %>
    <div class="card">
        <div class="card-body">
            <div class="card-title">
                <%= link_to post.name, post_path(post.id) %>
            </div>
            <div class="card-text">
                <%= post.content %>
            </div>
        </div>
    </div>
<% end %>

